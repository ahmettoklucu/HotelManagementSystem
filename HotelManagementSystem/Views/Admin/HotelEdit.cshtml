@model HotelManagementSystem.Models.PagesModel.HotelUserModel
@{
    ViewBag.Title = "HotelEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("HotelCreate", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>OTEL DÜZENLE</h4>
    <hr />
    <div class="form-group">
        <span>Otel İsmi</span>
        <div class="col-md-10">
            <input type="text" class="form-control" name="Name" id="Name"value="@Model.SingleHotel.Name" />
        </div>
    </div>
    <div class="form-group">
        <span>Adres</span>
        <div class="col-md-10">
            <textarea class="form-control" id="adress" name="adress" value="@Model.SingleHotel.Adress"></textarea>
        </div>
    </div>

    <div class="form-group">
        <span>Şehir</span>
        <div class="col-md-10">
            <input type="text" class="form-control" name="cityName" id="cityName" value="@Model.SingleHotel.CityName" />
        </div>
    </div>

    <div class="form-group">
        <span>RESİM</span>
        <div class="col-md-10">
            <input type="file" class="form-control" name="Image" id="Image" />
        </div>
    </div>
    <div class="col-md-10" data-select2-id="73">
        <span>YETKİLİ</span>
        <select id="UserId" name="UserId" class="form-control select2-hidden-accessible" data-toggle="select2" data-width="100%" data-select2-id="1" tabindex="-1" aria-hidden="true">
            <option data-select2-id="3">Select</option>
            @foreach (var item in Model.UserList)
            {
                <option value="@item.Id">@item.UserName</option>
            }
        </select>
    </div>
    <input type="hidden" name="id" name"ıd" value="@Model.SingleHotel.Id" />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

