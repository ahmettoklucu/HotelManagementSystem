@model HotelManagementSystem.Models.PagesModel.RoomHotelRoomType

@{
    ViewBag.Title = "RoomCreate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ODA OLUŞTUR</h4>
        <hr />
        <div class="form-group">
            <span>Oda numarasi</span>
            <div class="col-md-10">
                <input type="text" class="form-control" name="roomname" id="roomname" />
            </div>
        </div>
        <div class="form-group">
            <span>FİYATİ</span>
            <div class="col-md-10">
                <input type="number" step="0.1" class="form-control" id="PeerDeim" name="PeerDeim">
            </div>
        </div>
        <div class="col-md-10" data-select2-id="73">
            <span>Otel</span>
            <select id="HotelId" name="HotelId" class="form-control select2-hidden-accessible" data-toggle="select2" data-width="100%" data-select2-id="1" tabindex="-1" aria-hidden="true">
                <option data-select2-id="3">Select</option>
                @foreach (var item in Model.HotelList)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
        <div class="col-md-10" data-select2-id="73">
            <span>Oda tipi</span>
            <select id="RoomTypeId" name="RoomTypeId" class="form-control select2-hidden-accessible" data-toggle="select2" data-width="100%" data-select2-id="1" tabindex="-1" aria-hidden="true">
                <option data-select2-id="3">Select</option>
                @foreach (var item in Model.RoomTypeList)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
        <label class="text-warning">@ViewBag.mesaj</label>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
