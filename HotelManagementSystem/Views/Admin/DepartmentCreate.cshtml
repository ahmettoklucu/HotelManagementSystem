@model HotelManagementSystem.Models.Department
@{
    ViewBag.Title = "DepartmentCreate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-horizontal">
    <div class="card-body p-4">

        <div class="text-center mb-4">
            <h4 class="text-uppercase mt-0">Departman oluştur</h4>
        </div>
        <form method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Departman İsmi</label>
                <input class="form-control" type="text" id="name" name="name" maxlength="25" placeholder="Enter user name" required>
            </div>
            <label class="text-warning">@ViewBag.massage</label>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>


