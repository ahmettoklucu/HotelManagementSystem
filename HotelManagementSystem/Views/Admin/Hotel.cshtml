                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.HotelList)
                                        {
                                            i++;
                                            <tr class="odd">
                                                <td class="dtr-control sorting_1" tabindex="0">
                                                    <div style="position: absolute; height: 1px; width: 0px; overflow: hidden;">
                                                        <input type="text" tabindex="0">
                                                    </div>
                                                    @i
                                                </td>
                                                <td>@item.Name</td>
                                                <td>@item.CityName</td>
                                                <td>@item.WepSite</td>
                                                <td>@item.User.UserName</td>
                                                <td>@item.RegisterDate.ToString()</td>
                                                <td>
                                                    <a href="~/Admin/HotelEdit/@item.Id" class="btn btn-success btn-sm">Edit</a>
                                                    <a href="~/Admin/HotelDelete/@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>


                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
