@model HotelManagementSystem.Models.PagesModel.EmployeeHotelDepartment
@{
    ViewBag.Title = "EmployeeEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EmployeeEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>ÇALİŞAN DÜZENLE</h4>
    <hr />
    <div class="form-group">
        <span>İsmi</span>
        <div class="col-md-10">
            <input type="text" class="form-control" name="Name" id="Name" value="@Model.SingleEmployee.Name" />
        </div>
    </div>
    <div class="form-group">
        <span>Soyİsim</span>
        <div class="col-md-10">
            <input class="form-control" id="surename" name="surename"value="@Model.SingleEmployee.Surename">
        </div>
    </div>
    <div class="col-md-10" data-select2-id="73">
        <span>Otel</span>
        <select id="HotelId" name="HotelId" class="form-control select2-hidden-accessible" data-toggle="select2" data-width="100%" data-select2-id="1" tabindex="-1" aria-hidden="true">
            <option data-select2-id="3">Select</option>
            <optgroup>
                <option value="@Model.SingleEmployee.HotelId">@Model.SingleEmployee.Hotel.Name</option>
            </optgroup>
            @foreach (var item in Model.HotelList)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="col-md-10" data-select2-id="73">
        <span>Departman</span>
        <select id="DepartmentId" name="DepartmentId" class="form-control select2-hidden-accessible" data-toggle="select2" data-width="100%" data-select2-id="1" tabindex="-1" aria-hidden="true">
            <option data-select2-id="3">Select</option>
            @foreach (var item in Model.DepartmentList)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>

    <input type="hidden" name="id" id="id" value="@Model.SingleEmployee.Id" />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
</div>
}

