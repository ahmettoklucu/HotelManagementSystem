@model HotelManagementSystem.Models.PagesModel.ReservationRoomHotel
@{
    ViewBag.Title = "ReservationEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>reservaston</h4>
        <hr />
        <div class="form-group">
            <span>Giriş Tarihi</span>
            <div class="col-md-10">
                <input type="datetime" class="form-control" name="StartDate" id="StartDate" />
            </div>
        </div>
        <div class="form-group">
            <span>Çikiş Tarihi</span>
            <div class="col-md-10">
                <input type="datetime" class="form-control" id="Enddate" name="Enddate">
            </div>
        </div>
        <div class="col-md-10" data-select2-id="73">
            <span>oda</span>
            <select id="RoomId" name="RoomId" class="form-control select2-hidden-accessible" data-toggle="select2" data-width="100%" data-select2-id="1" tabindex="-1" aria-hidden="true">
                <option data-select2-id="3">Select</option>
                @foreach (var item in Model.RoomList)
                {
                    <option value="@item.Id">@item.RoomName</option>
                }
            </select>
        </div>
        <div class="col-md-10" data-select2-id="73">
            <span>kullanıcı</span>
            <select id="UserId" name="UserId" class="form-control select2-hidden-accessible" data-toggle="select2" data-width="100%" data-select2-id="1" tabindex="-1" aria-hidden="true">
                <option data-select2-id="3">Select</option>
                @foreach (var item in Model.UserList)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
        <input type="hidden" name="id" id="id" value="@Model.SingleReservation.Id" /> />
        <label class="text-warning">@ViewBag.mesaj</label>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
}
