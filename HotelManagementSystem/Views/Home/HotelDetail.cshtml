@model HotelManagementSystem.Models.Hotel
@{
    ViewBag.Title = "HotelDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="height:auto; background-image: url('Content/DORUKÇANTA.png');background-repeat:no-repeat;background-position:center;">
    <div class="col-6 m-2">
        <img src="~/Content/images/Hotel/@Model.Image" width="100%" />
    </div>
    <div class="col-5">
        <h3>@Model.Name</h3>
        <div>
        </div>
        <p>@Model.Description</p>
    </div>
    @if (!User.Identity.IsAuthenticated)
    {
        <a href="~/Admin/Login" class="btn btn-success btn-sm">REZERVASYON YAPMAK İÇİN GİRİŞ YAPINIZ</a>
    }
    else
    {
        <a href="~/Home/Reservartion" class="btn btn-success btn-sm">REZERVASYON YAP</a>
    }
    }
</div>

